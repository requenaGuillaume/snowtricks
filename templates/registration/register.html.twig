{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href={{ asset('assets/css/register.css') }}>
{% endblock %}

{% block title %}Registration{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center">Register</h1>

    {{ form_start(registrationForm, {'attr': {'class': 'col-4 mx-auto mt-5 mb-5'}}) }}
        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'd-block text-center'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control mb-2'}}) }}
        {{ form_errors(registrationForm.email) }}

        {{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'd-block text-center'}}) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control mb-2'}}) }}
        {{ form_errors(registrationForm.username) }}

        {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'd-block text-center'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control mb-2'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}

        <button type="submit" class="btn btn-primary w-50" style="margin-left: 50%; transform: translateX(-50%);">
            Create an account
        </button>

        <p class="text-center mt-2">
            <a href="{{ path('app_login') }}">Already an account ?</a>
        </p>
    {{ form_end(registrationForm) }}
{% endblock %}
