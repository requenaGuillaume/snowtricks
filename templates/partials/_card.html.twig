<div class="card mt-4" style="width: 18%; height: 15rem;">
  <div style="width: 100%; height: 10rem; overflow: hidden;">
    <img src="https://127.0.0.1:8000/assets/images/tricks/{{trick.images[0]}}" 
      class="card-img-top" style="height: 100%;" 
      alt="image of {{ trick.title }}"
    >
  </div>
  <div class="card-body d-flex justify-content-between">
    <h5 class="card-title">
        <a href="{{ path('app_trick', {'id': trick.id}) }}" class="btn">
          {{ trick.title | capitalize }}
        </a>
    </h5>
    <a href="#" class="btn">
        <i class="fa-solid fa-pencil"></i>
    </a>
    <a href="#" class="btn">
        <i class="fa-solid fa-trash-can"></i>
    </a>
  </div>
</div>