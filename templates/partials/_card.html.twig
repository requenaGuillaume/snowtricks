<div class="card mt-4 ms-3" style="width: 18%; height: 15rem;">
  <div style="width: 100%; height: 10rem; overflow: hidden;">
    <img src="https://127.0.0.1:8000/assets/images/tricks/{{trick.mainImage}}" 
      class="card-img-top" style="height: 100%;" 
      alt="image of {{ trick.title }}"
    >
  </div>
  <div class="card-body d-flex justify-content-between">
    <h5 class="card-title">
        <a href="{{ path('app_trick', {'slug': trick.slug}) }}" class="btn">
          {{ trick.title | capitalize }}
        </a>
    </h5>
    {% if app.user %}
      <a href="{{ path('app_trick_edit', {'slug': trick.slug}) }}" class="btn">
          <i class="fa-solid fa-pencil"></i>
      </a>
      <a href="{{ path('app_trick_delete', {'slug': trick.slug}) }}" class="btn">
          <i class="fa-solid fa-trash-can"></i>
      </a>
    {% endif %}    
  </div>
</div>
