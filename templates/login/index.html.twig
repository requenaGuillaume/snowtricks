{% extends 'base.html.twig' %}

{% block stylesheets %}
    <style>
        .hide{
            display: none;
        }

        @media screen and (max-width: 768px){
            .hide{
                display: inherit;
            }

           form{
                width: 70% !important;
                margin: 0 auto;
            }

            form button{
                width: 80%;
            }
        }
    </style>
{% endblock %}

{% block title %}Login{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <h1 class="text-center">Login</h1>

    <form action="{{ path('app_login') }}" method="post" class="col-4 mx-auto mt-5 mb-5">
        <label for="username" class="mt-2 d-block text-center">Username:</label>
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">

        <label for="password" class="mt-3 d-block text-center">Password:</label>
        <input type="password" class="form-control" id="password" name="_password">

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <p class="text-center mt-2 hide">
            <a href="{{ path('app_register') }}">Register</a>
        </p>

        <p class="text-center mt-2">
            <a href="{{ path('app_forgot_password_request') }}">Forgot your password ?</a>
        </p>

        <button type="submit" class="btn btn-primary w-50" style="margin-left: 50%; transform: translateX(-50%);">
            Login
        </button>
    </form>
{% endblock %}
